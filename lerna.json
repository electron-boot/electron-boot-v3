{
  "packages": [
    "packages/*"
  ],
  "useNx": false,
  "version": "1.0.0-beta.4",
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock",
        "--legacy-peer-deps"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/test/**",
        "jest.config.js",
        "jest.setup.js"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "forcePublish": "@electron-boot/version"
    }
  },
  "npmClient": "pnpm"
}
